server:
  port: 8080

spring:
  jpa:
    hibernate:
      ddl-auto: create-drop
    show-sql: true
    properties:
      hibernate:
        format_sql: true
    database-platform: org.hibernate.dialect.PostgreSQLDialect
#    generate-ddl: true
  datasource:

    driver-class-name: org.postgresql.Driver
    url: jdbc:postgresql://localhost:5432/bookings_project
    username: root
    password: root
    hikari:
      schema: postgres
      connection-init-sql: CREATE SCHEMA IF NOT EXISTS postgres
      connection-timeout: 100000

